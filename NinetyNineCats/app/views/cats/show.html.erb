<table>
  <caption>Cat Info</caption>
  <tr>
    <th>Name</th>
    <th>Age</th>
    <th>Color</th>
    <th>Sex</th>
    <th>Description</th>
  </tr>

  <tr>
    <td> <%= @cat.name %> </td>
    <td> <%= @cat.age %> </td>
    <td> <%= @cat.color %> </td>
    <td> <%= @cat.sex %> </td>
    <td> <%= @cat.description %> </td>
  </tr>
</table>

<table>
  <caption>Cat Rental Info</caption>
  <tr>
    <th>Start Date</th>
    <th>End Date</th>
  </tr>

  <% @cat.rental_requests.order(:start_date).each do |request| %>
    <tr>
      <td> <%= request.start_date %> </td>
      <td> <%= request.end_date %> </td>
    </tr>
  <% end %>
</table>
